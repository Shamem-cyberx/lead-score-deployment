# ============================================
# RAKEZ Lead Scoring Model - Environment Variables
# ============================================
# Copy this file to .env and update with your values
# DO NOT commit .env to version control!

# ============================================
# MLflow Configuration
# ============================================

# MLflow Tracking URI
# Local: "./mlruns" or "sqlite:///mlflow.db"
# Databricks: "databricks://profile-name" or "databricks://host"
# Remote: "http://mlflow-server:5000"
MLFLOW_TRACKING_URI=./mlruns

# MLflow Model Registry
MODEL_REGISTRY_NAME=lead_scoring_model
MODEL_STAGE=Production
SHADOW_MODEL_ENABLED=false
SHADOW_MODEL_STAGE=Staging

# ============================================
# FastAPI Configuration
# ============================================

# API Server
API_HOST=127.0.0.1
API_PORT=8000

# CORS Configuration (comma-separated origins)
# Production: Set specific origins, e.g., "https://app.rakez.com,https://dashboard.rakez.com"
# Development: "*" allows all origins
ALLOWED_ORIGINS=*

# API Security (for production)
# API_KEY=your-secret-api-key-here
# API_KEY_HEADER=X-API-Key

# ============================================
# Dashboard Configuration
# ============================================

# Dashboard Server
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=8050

# Dashboard Data Source
# Options: "csv" (local CSV files) or "databricks" (Delta tables)
DASHBOARD_DATA_SOURCE=csv

# ============================================
# Databricks Configuration (Optional)
# ============================================

# Databricks Workspace URL
# DATABRICKS_HOST=https://your-workspace.cloud.databricks.com

# Databricks Token (for service principal or user token)
# DATABRICKS_TOKEN=your-databricks-token

# Databricks Cluster ID (for running jobs)
# DATABRICKS_CLUSTER_ID=your-cluster-id

# Databricks Workspace ID
# DATABRICKS_WORKSPACE_ID=your-workspace-id

# ============================================
# Database Configuration (Optional)
# ============================================

# PostgreSQL (for audit logs and metrics storage)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=rakez_ml
# DB_USER=rakez_user
# DB_PASSWORD=your-secure-password

# Database Connection String (alternative to above)
# DATABASE_URL=postgresql://user:password@localhost:5432/rakez_ml

# ============================================
# Audit Logging Configuration
# ============================================

# Audit Table (Delta table or database table)
AUDIT_TABLE=default.audit_logs

# Audit Retention (days) - 7 years for compliance
AUDIT_RETENTION_DAYS=2555

# Audit Log Level
# Options: "INFO", "WARNING", "ERROR", "DEBUG"
AUDIT_LOG_LEVEL=INFO

# ============================================
# Model Governance Configuration
# ============================================

# Model Approval Table
APPROVAL_TABLE=default.model_approvals

# Model Risk Thresholds
# MODEL_RISK_THRESHOLD_HIGH=0.7
# MODEL_RISK_THRESHOLD_MEDIUM=0.4

# ============================================
# Ollama AI Configuration (Optional)
# ============================================

# Ollama Server URL
OLLAMA_URL=http://localhost:11434

# Ollama Model Name
OLLAMA_MODEL=llama3.2

# Ollama Timeout (seconds)
OLLAMA_TIMEOUT=60

# ============================================
# Monitoring & Alerting (Optional)
# ============================================

# Email Configuration (for alerts)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# ALERT_EMAIL_TO=alerts@rakez.com

# Slack Webhook (for alerts)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================
# Feature Flags
# ============================================

# Enable/Disable Features
ENABLE_EXPLAINABILITY=true
ENABLE_FAIRNESS_METRICS=true
ENABLE_BIAS_DETECTION=true
ENABLE_SHADOW_DEPLOYMENT=false

# ============================================
# Logging Configuration
# ============================================

# Log Level
# Options: "DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"
LOG_LEVEL=INFO

# Log File Path (optional)
# LOG_FILE=logs/rakez_ml.log

# ============================================
# Security & Compliance
# ============================================

# Encryption Key (for sensitive data)
# ENCRYPTION_KEY=your-32-character-encryption-key

# JWT Secret (for API authentication)
# JWT_SECRET=your-jwt-secret-key

# Session Secret
# SESSION_SECRET=your-session-secret

# ============================================
# Performance Tuning
# ============================================

# Request Timeout (seconds)
REQUEST_TIMEOUT=30

# Max Request Size (MB)
MAX_REQUEST_SIZE=10

# Worker Processes (for production)
# WORKERS=4

# ============================================
# Development/Testing
# ============================================

# Environment
# Options: "development", "staging", "production"
ENVIRONMENT=development

# Debug Mode
DEBUG=true

# Test Mode (use mock data)
# TEST_MODE=false

# ============================================
# Notes
# ============================================
#
# 1. For production, set:
#    - ENVIRONMENT=production
#    - DEBUG=false
#    - Use secure passwords and keys
#    - Set specific ALLOWED_ORIGINS
#    - Enable proper authentication
#
# 2. For Databricks:
#    - Set DATABRICKS_HOST and DATABRICKS_TOKEN
#    - Update MLFLOW_TRACKING_URI to Databricks
#
# 3. For database storage:
#    - Configure database connection
#    - Update AUDIT_TABLE and APPROVAL_TABLE
#
# 4. Security:
#    - Never commit .env file
#    - Use secrets management in production
#    - Rotate keys regularly
#
# ============================================

